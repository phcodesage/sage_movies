{
  "name": "sage-movies",
  "version": "1.0.0",
  "description": "Netflix-style movie streaming application",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "build": "npm run build:client && npm run build:server",
    "build:client": "mkdirp dist/public && copyfiles -u 1 public/**/* dist/public",
    "build:server": "copyfiles server.js .env.production package.json dist/ && copyfiles -u 1 functions/**/* dist/functions",
    "postbuild": "cd dist && npm install --production"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "rimraf": "^5.0.5",
    "mkdirp": "^3.0.1",
    "copyfiles": "^2.4.1"
  },
  "type": "module"
}
